<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="550"
             x:Class="TRANSMARIZE.Views.RevealWordView">
	<StackPanel>
		<TextBlock Text="{Binding LearnWord}"/>
		<StackPanel Orientation="Horizontal">
			<Button Content="Next"
					Command="{Binding $parent[Window].DataContext.NaviReviseCommand}"/>
			<Button Content="Stop"
					Command="{Binding $parent[Window].DataContext.NaviListCommand}"/>
		</StackPanel>

	</StackPanel>
</UserControl>
