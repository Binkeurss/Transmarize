<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
		Height="600" Width="500"
        x:Class="TRANSMARIZE.Views.WordWindow"
        Title="WordWindow"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1"
		Background="#709BE3"
		CanResize="False"
		Deactivated="Window_Deactivated">

	<Grid RowDefinitions="Auto, Auto, *">
		<!--Row 1 để chứa button exit và hide-->
		<Grid Grid.Row="0" Height="40" Background="Red">
			<StackPanel Orientation="Horizontal"
			Height="40"
			Width="80"
			HorizontalAlignment="Right"
			VerticalAlignment="Top">
				<StackPanel.Styles>
					<Style Selector="Button.Hide">
						<Setter Property="HorizontalAlignment" Value="Right"/>
						<Setter Property="VerticalAlignment" Value="Top"/>
						<Setter Property="Margin" Value="0 -15 -4 0"/>
						<Setter Property="Height" Value="40"/>
						<Setter Property="Width" Value="40"/>
						<Setter Property="VerticalContentAlignment" Value="Center"/>
						<Setter Property="HorizontalContentAlignment" Value="Center"/>
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="FontSize" Value="15"/>
						<Setter Property="Foreground" Value="Black"/>
						<Setter Property="FontWeight" Value="UltraBold"/>
					</Style>

					<Style Selector="Button.Exit">
						<Setter Property="HorizontalAlignment" Value="Right"/>
						<Setter Property="VerticalAlignment" Value="Top"/>
						<Setter Property="Height" Value="40"/>
						<Setter Property="Width" Value="40"/>
						<Setter Property="Margin" Value="10 -15 0 0"/>
						<Setter Property="VerticalContentAlignment" Value="Bottom"/>
						<Setter Property="HorizontalContentAlignment" Value="Center"/>
						<Setter Property="FontWeight" Value="UltraBold"/>
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="Foreground" Value="Black"/>
					</Style>
				</StackPanel.Styles>

				<Button Classes="Hide"
						Name="HideButton"
						Content="___"
						Click="HideButton_Click"
						FontWeight="Bold">
				</Button>

				<Button Classes="Exit"
						Name="ExitButton"
						Click="ExitButton_Click">
					<Image Source="avares://TRANSMARIZE/Assets/MainWindow/close.png"
						   Width="20" Height="20"
						   Margin="0 0 0 -3"/>
				</Button>
			</StackPanel>
		</Grid>

		<!--Row 2 để chứa chữ, phiên âm và sound -->
		<Grid Grid.Row="1" Height="150" Background="White">
			<Grid.Styles>
				<Style Selector="TextBlock.Word">
					<Setter Property="FontSize" Value="35"/>
					<Setter Property="FontWeight" Value="Bold"/>
					<Setter Property="Margin" Value="30 20 20 20"/>
					<Setter Property="FontFamily" Value="{StaticResource VigaFont}"/>
				</Style>
				<Style Selector="TextBlock.PhienAm">
					<Setter Property="FontSize" Value="25"/>
					<Setter Property="Margin" Value="30 2 0 0"/>
				</Style>

				<Style Selector="Button.Volume">
					<Setter Property="Height" Value="50"/>
					<Setter Property="Width" Value="50"/>
					<Setter Property="Margin" Value="10 -5 0 0"/>
					<Setter Property="Background" Value="Transparent"/>
				</Style>
			</Grid.Styles>
			<StackPanel Orientation="Vertical">

				<TextBlock Classes="Word" Text="{Binding Word}" Foreground="Black"/>

				<StackPanel Orientation="Horizontal">
					<TextBlock Classes="PhienAm" Text="{Binding Phonetic}" Foreground="Black"/>
					<Button Classes="Volume" Command="{Binding AudioPlayCommand}">
						<Image Source="avares://TRANSMARIZE/Assets/WordWindow/volume.png"/>
					</Button>
				</StackPanel>
			</StackPanel>
		</Grid>

		<!-- Chứa các definitions của từ đó-->
		<Grid Grid.Row="2" Background="Transparent">

			<ScrollViewer>
				<!--Template cho những đại từ-->
				<ItemsControl ItemsSource="{Binding Definitions}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel>
								<!--DataTempalte này dùng để phân loại nó thuộc loại đại từ nào-->
								<StackPanel Orientation="Horizontal" VerticalAlignment="Center"
											Margin="10 0 0 0">
									<Image Source="avares://TRANSMARIZE/Assets/WordWindow/star.png"
										   Width="30"
										   Height="30"/>
									<!--Gồm star icon và đại từ, nằm ngang-->
									<TextBlock Margin="10 10 0 10"
											   FontFamily="{StaticResource VigaFont}"
											   FontWeight="Bold"
											   FontSize="25"
											   Text="{Binding PartOfSpeech}"/>
								</StackPanel>

								<!--DataTemplate này dùng để vô meaning và example (nếu có)-->
								<ItemsControl ItemsSource="{Binding Def2exs}">
									<!--Style cho example-->
									<ItemsControl.Styles>
										<!--Tồn tại example-->
										<Style Selector="SelectableTextBlock.HaveExample">
											<Setter Property="Height" Value="25"/>
										</Style>
										<!--Không tồn tại example-->
										<Style Selector="SelectableTextBlock.NotExample">
											<Setter Property="Height" Value="0"/>
										</Style>
									</ItemsControl.Styles>
									<!--Bắt đầu design cho definitions-->
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<StackPanel>
												<SelectableTextBlock Margin="4" TextWrapping="Wrap"
																	 Text="{Binding Meaning}"/>
												<SelectableTextBlock Classes.NotExample="{Binding !IsHasExample}"
																	 Classes.HaveExample="{Binding IsHasExample}"
																	 Margin="4" TextWrapping="Wrap"
																	 Text="{Binding Example}"/>
											</StackPanel>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>
	</Grid>
</Window>