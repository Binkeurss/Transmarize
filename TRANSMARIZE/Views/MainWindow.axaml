<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TRANSMARIZE.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TRANSMARIZE.Views"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="343"
		Width="700" Height="343"
        x:Class="TRANSMARIZE.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="TRANSMARIZE"
		CornerRadius="25"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaTitleBarHeightHint="-1"	
		Background="#709BE3"
		CanResize="False">
	
	<Grid ColumnDefinitions="Auto, Auto, *, Auto">
		<!-- Column 0 -->
		<Grid Grid.Column="0" RowDefinitions="Auto, Auto, Auto, Auto" 
			  Width="383">
			<!-- Column 0 Row 0 dùng để chữa logo và tên app-->
			<Grid Grid.Row="0" ColumnDefinitions="Auto, Auto">
				<Grid Grid.Column="0">
					<Image Source="avares://TRANSMARIZE/Assets/MainWindow/logo_transparent.ico"
						   Width="115." 
						   Height="140.5" 
						   Margin="10 0 0 0"
						   HorizontalAlignment="Left" 
						   VerticalAlignment="Center"/>
				</Grid>
				<Grid Grid.Column="1"
					  HorizontalAlignment="Center" 
					  VerticalAlignment="Center"
					  Margin="0 -23 0 0">
					<Border Margin="-15 0 0 0" 
							BorderBrush="Black" 
							BorderThickness="1.5" 
							Padding="5" 
							CornerRadius="25">
						<TextBlock FontSize="25"
								   FontWeight="Bold"
								   FontFamily="{StaticResource VigaFont}">Transmarize</TextBlock>
					</Border>
				</Grid>
			</Grid>

			<Grid Grid.Row="1" 
				  Height="71">
				<TextBlock
					Margin="-60 -5 0 0"
					FontSize="22.5"
					FontFamily="{StaticResource VigaFont}"
					FontWeight="UltraBold"
					HorizontalAlignment="Center"
					TextAlignment="Left"
					TextWrapping="Wrap">
					Transmarize is up and
					<LineBreak/> running
				</TextBlock>
			</Grid>

			<Grid Grid.Row="2" 
				  Height="30">
				<TextBlock FontSize="10" 
						   Foreground="#1B5FD3" 
						   Margin="40 0 0 0" 
						   FontStyle="Oblique" 
						   FontWeight="DemiBold"
						   FontFamily="{StaticResource VigaFont}">
					Not understanding a paragraph or wanting to summarize it, simply
					<LineBreak></LineBreak>highlight the text and choose the service that suits your needs
				</TextBlock>
			</Grid>

			<Grid Grid.Row="3"
				  Margin="0 20 0 0" 
				  ColumnDefinitions="Auto, Auto" 
				  Height="45">
				<Grid Grid.Column="0">
					<Grid.Styles>
						<Style Selector="ComboBox">
							<Setter Property="Effect">
								<DropShadowEffect Color="Black"
												  BlurRadius="5"
												  OffsetX="-1"
												  OffsetY="3"/>
							</Setter>
						</Style>
					</Grid.Styles>
					<ComboBox
						BorderBrush="Black" 
						BorderThickness="2" 
						VerticalAlignment="Center"
						CornerRadius="25"
						Margin="40 0 0 0" 
						Width="260" 
						Height="43" 
						Background="#FFFFFF"></ComboBox>
				</Grid>
				<Grid Grid.Column="1">
					<Grid.Styles>
						<Style Selector="Button">
							<Setter Property="Effect">
								<DropShadowEffect Color="Black"
												  BlurRadius="5"
												  OffsetX="-1"
												  OffsetY="3"/>
							</Setter>
						</Style>
					</Grid.Styles>
					<Button x:Name="ToggleButton"
							BorderBrush="Black"
							BorderThickness="2"
							Content="START" 
							Background="#FFFFFF"
							Margin="18 0 0 0" 
							Width="69" 
							Height="43" 
							FontWeight="Bold" 
							FontFamily="VigaFont"
							CornerRadius="25" 
							HorizontalContentAlignment="Center" 
							VerticalContentAlignment="Center">						
					</Button>
				</Grid>
			</Grid>
		</Grid>
		<!-- Column 1-->
		<Grid Grid.Column="1" Width="42"></Grid>
		<!-- Column 2-->
		<Grid Grid.Column="2" RowDefinitions="Auto, Auto, *">
			<Grid Grid.Row="0" Height="60"/>
			<!--Chia Row 1 thành 4 phần-->
			<Grid Grid.Row="1" Height="200">
				<Grid.Styles>
					<Style Selector="Border.h1">
						<Setter Property="Background" Value="White"/>
						<Setter Property="CornerRadius" Value="10"/>
						<Setter Property="Padding" Value="4"/>
					</Style>
					
					<Style Selector="Border.h2">
						<Setter Property="Background" Value="Black"/>
						<Setter Property="Height" Value="1"/>
						<Setter Property="Width" Value="195"/>
						<Setter Property="Margin" Value="0 -100 0 0"/>
					</Style>

					<Style Selector="Border.h3">
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="BorderThickness" Value="1"/>
						<Setter Property="Height" Value="90"/>
						<Setter Property="Width" Value="195"/>
						<Setter Property="Margin" Value="0"/>
					</Style>

					<Style Selector="TextBlock.ToYou">
						<Setter Property="Margin" Value="0 5 0 0"/>
						<Setter Property="FontFamily" Value="{StaticResource ZenKakuGothicAntiqueRegular}"/>
						<Setter Property="FontSize" Value="12.5"/>
					</Style>
				</Grid.Styles>
				<Border Classes="h1">
					<TextBlock Name="Guild"
							   Background="Transparent" 
							   FontFamily="ZenKakuGothicAntiqueRegular"
							   Padding="20"
							   Margin="0 -10 0 0">
						To: you
					</TextBlock>
				</Border>
				<!--Đường thẳng ở giữa-->
				<Border Classes="h2"/>
				<!--To: you-->
				<Border Classes="h3">

					<TextBlock Classes="ToYou">
						I hope you have a good day. If you do not 
						<LineBreak></LineBreak>understand any words, let I help you explain these words.
					</TextBlock>					
				</Border>
			</Grid>
			
			<Grid Grid.Row="2"/>
		</Grid>
		<!-- Column 3-->
		<Grid Grid.Column="3" Width="30" Background="Transparent"></Grid>
	</Grid>
</Window>
